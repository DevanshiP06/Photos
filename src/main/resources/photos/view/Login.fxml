<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="photos.controller.LoginController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>
  <Label text="Photos - Login"/>
  <HBox spacing="10">
    <Label text="Username:"/>
    <TextField fx:id="usernameField" prefWidth="180"/>
  </HBox>
  <HBox spacing="10">
    <Label text="Password:"/>
    <PasswordField fx:id="passwordField" prefWidth="180"/>
  </HBox>
  <HBox spacing="10">
    <Button text="Login" onAction="#onLogin"/>
    <Button text="Quit" onAction="#onQuit"/>
  </HBox>
</VBox>